@model IEnumerable<EmpDeptPosSalViewModel>

@{
    Layout = "_HRMSLayout";
}

<div class="container">

    <section style="background-color: #eee;">
        <div class="container py-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-12 col-lg-3 mb-1">
                        <div class="card">
                            <div class="d-flex justify-content-between p-3">
                                <p class="mb-0">@item.FirstName @item.LastName</p>
                                
                            </div>
                            <img src="~/images/@item.Image"
                             class="card-img-top" alt="Laptop" />
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <p class="small"><a href="#!" class="text-muted">Phone Number</a></p>
                                    <p class="small text-danger">@item.PhoneNumber</p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="small"><a href="#!" class="text-muted">Email</a></p>
                                    <p class="small text-danger">@item.Email</p>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


</div>
